		<Label x:Name="lblFullName_Copy31" Content="Descripción:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,53,0,0" Height="25.96" Width="90.06"/>
		<TextBox x:Name="txtDescription" Margin="10,78.96,10,51" FontStyle="Italic" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" Tag="Gineco-Obstétrico Obervaciones" BorderThickness="1" BorderBrush="Black"/>
	</Grid>
</Window>